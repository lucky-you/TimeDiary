<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/include_merge_title_layout" />

    <View style="@style/DivideLineStyle" />

    <TextView
        style="@style/TextViewBody13SpStyle"
        android:layout_marginLeft="@dimen/spacing_10"
        android:layout_marginTop="@dimen/spacing_20"
        android:layout_marginBottom="@dimen/spacing_10"
        android:text="@string/My_Channel"
        android:textColor="@color/color_1a1a1a"
        android:textSize="17sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/MyChannelRecyclerView"
        style="@style/RecycleViewCommonStyle"
        android:layout_marginLeft="@dimen/spacing_6"
        android:layout_marginRight="@dimen/spacing_10" />

    <TextView
        style="@style/TextViewBody13SpStyle"
        android:layout_marginLeft="@dimen/spacing_10"
        android:layout_marginTop="@dimen/spacing_20"
        android:layout_marginBottom="@dimen/spacing_10"
        android:text="@string/Recommended_Channel"
        android:textColor="@color/color_1a1a1a"
        android:textSize="17sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecommendedRecyclerView"
        style="@style/RecycleViewCommonStyle"
        android:layout_marginLeft="@dimen/spacing_6"
        android:layout_marginRight="@dimen/spacing_10" />

</LinearLayout>