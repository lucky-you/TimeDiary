<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rivVideoPhoto"
        android:layout_width="@dimen/spacing_174"
        android:layout_height="@dimen/spacing_98"
        android:layout_marginLeft="@dimen/spacing_10"
        android:layout_marginTop="@dimen/spacing_5"
        android:layout_marginRight="@dimen/spacing_10"
        android:layout_marginBottom="@dimen/spacing_5"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_image_view"
        app:riv_corner_radius="@dimen/spacing_6" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/spacing_98"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVideoName"
            style="@style/TextViewBody13SpStyle"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textColor="@color/color_1a1a1a"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/spacing_2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVideoDuration"
                style="@style/TextViewBody13SpStyle"
                android:text="@string/Duration" />

            <RelativeLayout
                android:layout_width="@dimen/spacing_130"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvPlayNumber"
                    style="@style/TextViewBody13SpStyle"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_search"
                    android:drawablePadding="@dimen/spacing_8"
                    android:text="1652" />

                <LinearLayout
                    android:id="@+id/llComplimentsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivComplimentsView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_search" />

                    <TextView
                        android:id="@+id/tvComplimentsNumber"
                        style="@style/TextViewBody13SpStyle"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_6"
                        android:text="84%" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
