<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_98"
        android:layout_margin="@dimen/spacing_8"
        android:background="@drawable/shape_dialog_bg">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rivVideoPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/spacing_6" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_20"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/spacing_6"
            android:layout_marginRight="@dimen/spacing_6">

            <TextView
                android:id="@+id/tvPlayNumber"
                style="@style/TextViewBody13SpStyle"
                android:layout_centerVertical="true"
                android:text="15454"
                android:textColor="@color/color_1a1a1a"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/llComplimentsNumberLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tvComplimentsNumber"
                    style="@style/TextViewBody13SpStyle"
                    android:layout_centerVertical="true"
                    android:text="86%"
                    android:textColor="@color/color_1a1a1a"
                    android:textSize="10sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvVideoDuration"
                style="@style/TextViewBody13SpStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="02:12:43"
                android:textColor="@color/color_1a1a1a"
                android:textSize="10sp" />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tvVideoName"
        style="@style/TextViewBody13SpStyle"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/spacing_10"
        android:text="@string/app_name"
        android:textColor="@color/color_1a1a1a"
        android:textSize="14sp" />


</LinearLayout>
