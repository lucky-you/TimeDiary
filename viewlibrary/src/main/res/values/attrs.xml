<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--自定义进度条-->
    <declare-styleable name="CustomProgressBar">
        <attr name="progressColor" format="color" />
        <attr name="progressDescColor" format="color" />
        <attr name="progressRadius" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="progress" format="integer" />
        <attr name="borderWidth" format="dimension" />
        <attr name="progressDesc" format="string" />
        <attr name="isShowDesc" format="boolean" />
    </declare-styleable>


    <!--展示消息数量的view-->
    <declare-styleable name="MessageTextView">
        <!-- 圆角矩形背景色 -->
        <attr name="mv_backgroundColor" format="color" />
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_cornerRadius" format="dimension" />
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_strokeWidth" format="dimension" />
        <!-- 圆角边框颜色-->
        <attr name="mv_strokeColor" format="color" />
        <!-- 圆角弧度是高度一半-->
        <attr name="mv_isRadiusHalfHeight" format="boolean" />
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="mv_isWidthHeightEqual" format="boolean" />
    </declare-styleable>


    <!--垂直跑马灯-->
    <declare-styleable name="VerticalBannerView">
        <attr name="gap" format="integer" />
        <attr name="animDuration" format="integer" />
    </declare-styleable>

    <!--自定义（圆形或者圆角型）图片-->
    <declare-styleable name="RoundImageView">
        <!-- 描边宽度-->
        <attr name="border_width" format="dimension" />
        <!-- 描边颜色-->
        <attr name="border_color" format="color" />
        <!--圆角大小-->
        <attr name="corner_radius" format="dimension" />
        <!--左上圆角大小-->
        <attr name="leftTop_corner_radius" format="dimension" />
        <!--右上圆角大小-->
        <attr name="rightTop_corner_radius" format="dimension" />
        <!--左下圆角大小-->
        <attr name="leftBottom_corner_radius" format="dimension" />
        <!--右下圆角大小-->
        <attr name="rightBottom_corner_radius" format="dimension" />
        <!--图片类型：圆角或者圆形-->
        <attr name="type" format="enum">
            <enum name="oval" value="2" />
            <enum name="round" value="1" />
            <enum name="circle" value="0" />
        </attr>
    </declare-styleable>

    <!--自定义密码输入框-->
    <declare-styleable name="PasswordEditText">
        <!-- 密码的个数 -->
        <attr name="passwordNumber" format="integer" />
        <!-- 密码圆点的半径 -->
        <attr name="passwordRadius" format="dimension" />
        <!-- 密码圆点的颜色 -->
        <attr name="passwordColor" format="color" />
        <!-- 分割线的颜色 -->
        <attr name="divisionLineColor" format="color" />
        <!-- 分割线的大小 -->
        <attr name="divisionLineSize" format="color" />
        <!-- 背景边框的颜色 -->
        <attr name="bgColor" format="color" />
        <!-- 背景边框的大小 -->
        <attr name="bgSize" format="dimension" />
        <!-- 背景边框的圆角大小 -->
        <attr name="bgCorner" format="dimension" />
    </declare-styleable>


    <declare-styleable name="SwitchButton">
        <!--阴影半径-->
        <attr name="sb_shadow_radius" format="reference|dimension" />
        <!--阴影偏移-->
        <attr name="sb_shadow_offset" format="reference|dimension" />
        <!-- 阴影颜色-->
        <attr name="sb_shadow_color" format="reference|color" />
        <!-- 关闭颜色-->
        <attr name="sb_uncheck_color" format="reference|color" />
        <!--开启颜色-->
        <attr name="sb_checked_color" format="reference|color" />
        <!--边框宽度-->
        <attr name="sb_border_width" format="reference|dimension" />
        <!--开启指示器颜色-->
        <attr name="sb_checkline_color" format="reference|color" />
        <!--开启指示器线宽-->
        <attr name="sb_checkline_width" format="reference|dimension" />
        <!--关闭指示器颜色-->
        <attr name="sb_uncheckcircle_color" format="reference|color" />
        <!--关闭指示器线宽-->
        <attr name="sb_uncheckcircle_width" format="reference|dimension" />
        <!--关闭指示器半径-->
        <attr name="sb_uncheckcircle_radius" format="reference|dimension" />
        <!--是否选中-->
        <attr name="sb_checked" format="reference|boolean" />
        <!--是否启用阴影-->
        <attr name="sb_shadow_effect" format="reference|boolean" />
        <!--动画时间，默认300ms-->
        <attr name="sb_effect_duration" format="reference|integer" />
        <!-- 按钮颜色-->
        <attr name="sb_button_color" format="reference|color" />
        <!--是否显示指示器，默认true：显示-->
        <attr name="sb_show_indicator" format="reference|boolean" />
        <!--背景色，默认白色-->
        <attr name="sb_background" format="reference|color" />
        <!--是否启用特效，默认true-->
        <attr name="sb_enable_effect" format="reference|boolean" />

    </declare-styleable>

    <declare-styleable name="SimpleTitleBar">

        <!-- 中间 -->
        <attr name="title" format="string" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />

        <!--整体背景-->
        <attr name="backgroundColor" format="color" />
        <attr name="backgroundDrawable" format="reference" />

        <!-- 左边 -->
        <attr name="leftIcon" format="reference" /><!-- leftIcon 优先于 backButton -->
        <attr name="leftTitle" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="leftIsFinish" format="boolean" />
        <attr name="leftLayoutVisible" format="boolean" />
        <attr name="leftIconVisible" format="boolean" />
        <attr name="leftTextVisible" format="boolean" />

        <!-- 右边 -->
        <attr name="rightIcon" format="reference" />
        <attr name="rightTextTitle" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightLayoutVisible" format="boolean" />
        <attr name="rightIconVisible" format="boolean" />
        <attr name="rightTextVisible" format="boolean" />

        <!-- 分割线 -->
        <attr name="bottomDividerLineVisible" format="boolean" />
        <attr name="bottomDividerLineColor" format="reference|color" />
        <attr name="bottomDividerLineHeight" format="dimension" />

    </declare-styleable>


    <attr name="MiniLoadingStyle" format="reference" />
    <declare-styleable name="MiniLoadingView">
        <!--loading控件的大小，默认32dp-->
        <attr name="mlv_loading_view_size" format="dimension" />
        <!--loading控件的颜色，默认白色-->
        <attr name="mlv_loading_view_color" format="color" />
    </declare-styleable>

</resources>